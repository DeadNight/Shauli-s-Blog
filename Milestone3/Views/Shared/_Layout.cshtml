<!DOCTYPE html>
<html>
<head>
    <!-- Submitter: Nir Leibovitch 200315232 -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shauli's Blog</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
</head>
<body>
    <header>
        <h1>@ViewBag.Title</h1>
    </header>

    <nav>
        <!-- Navigation -->
        <ul>
            <li class="selected">@Html.ActionLink("Blog", "Index", "Blog")</li>
            <li>@Html.ActionLink("Fan Club", "Index", "Fans")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            <li>@Html.ActionLink("Manage", "Index", "Posts")</li>
            <li class="subscribe"><a href="#"><img src="~/Content/images/rss.png" />Subscribe via. RSS</a></li>
        </ul>
    </nav>
    
    <section id="intro">
        <!-- Introduction -->
        <header>
            <h2>Do you have questions for me?</h2>
        </header>
